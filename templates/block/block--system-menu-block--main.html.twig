{#
/**
 * @file
 * Eau de Web theme override for a menu block.
 *
 * See block--system-menu-block.html.twig
 */
#}

{%
  set classes = [
    'block',
    'block-menu',
    'navigation',
    'menu--' ~ derivative_plugin_id|clean_class,
    ts__navbar_align,
  ]
%}
{% set heading_id = attributes.id ~ '-menu'|clean_id %}

<nav aria-labelledby="{{ heading_id }}"{{ attributes.addClass(classes)|without('role', 'aria-labelledby') }}>
  {% if not configuration.label_display %}
    {% set title_attributes = title_attributes.addClass('visually-hidden') %}
  {% endif %}

  {{ title_prefix }}
    <h5{{ title_attributes.setAttribute('id', heading_id) }}>
      {{- configuration.label -}}
    </h5>
  {{ title_suffix }}

  {# Menu. #}
  {%- block content -%}
    {{- content -}}
  {%- endblock -%}
</nav>
